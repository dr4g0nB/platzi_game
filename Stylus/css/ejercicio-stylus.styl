fuente-lato= 'Lato', sans-serif
fuente-oswald= 'Oswald', sans-serif

color-black= #333
color-purple= #8841da
color-white= #fff

contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0

boxshadow()
  background-color: color-white
  box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

//Function
opacidad(color, cantidad)
  alpha(color, cantidad)

titulos(fuente)
  if fuente == fuente-lato
    font-family: fuente-lato
  else
    font-family: fuente-oswald
    font-weight: 600
    text-transform: uppercase

//Loop
for header in 3 2 1
  h{header}
    font-size: 35px - (5*header)
    margin: 0

*
  box-sizing: border-box

body
  margin: 0
  color: color-black
  titulos(fuente-lato)

.buscador
  width: 100%
  height: 250px
  padding: 100px
  background: url(../images/cover.jpg) center/cover no-repeat
  text-align: center
  
  &__input 
    width: 45%
    height: 58px
    padding: 20px
    border: none
    border-radius: 30px
    font-size: 12px

.encabezado--con-filtros
  contenedor()

  h2
    margin-top: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 40px
    titulos(fuente-oswald)

  .filtros
    width 250px
    height: 75px
    padding: 20px
    margin-left: auto
    boxshadow()

    span
      titulos(fuente-oswald)
    
    a
      margin-left: 20px
      font-size: 25px
      color: color-black

.contenido
  margin-bottom: 40px
  justify-content: space-evenly
  contenedor()

.caja
  max-width: 400px
  boxshadow()

  &__imagen
    max-width: 400px

  &__contenido
    padding: 20px
    background-color: color-white

    span
      color: color-purple
      titulos(fuente-oswald)

    h3
      font-weight: normal
      titulos(fuente-oswald)

.estadistica--articulos
  height: 70px
  padding: 20px
  border-top: 1px solid opacidad(color-black, 0.30)

  ul
    display: flex
    margin: 0
    padding: 0
    justify-content: space-evenly

    li
      list-style none
      color: opacidad(color-black, 0.30)

    span
      margin-left: 10px 
